{
  "name": "api-server-template",
  "version": "1.0.0",
  "description": "An OOP MVC API boilerplate built with Node.js, Express, TypeScript, PostgreSQL, and Prisma ORM. Features class-based Controllers, Services, and Repositories, with JWT authentication, middleware support, and database seeding. Designed for scalability, clean architecture, and production-ready APIs.",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "seed": "ts-node prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jomtoledo/api-server-template.git"
  },
  "keywords": [],
  "author": "jomtoledo",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jomtoledo/api-server-template/issues"
  },
  "homepage": "https://github.com/jomtoledo/api-server-template#readme",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "prisma": "^6.16.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
